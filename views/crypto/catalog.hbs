<main>
    <section class="crypto-market">
        <h1><span>Crypto</span> Trade</h1>
            {{#if cryptoOffer}}
        <div class="offer-list">

            <div class="added-hotels">
                {{#each cryptoOffer}}
                {{>cryptoTemplate}}
                {{/each}}
            </div>

        </div>
        {{else}}
        <div class="no-offer">
            <p>There are no crypto offers found!</p>
        </div>
        {{/if}}
    </section>
</main>